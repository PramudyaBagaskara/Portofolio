<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sss"
    android:padding="30dp"
    tools:context=".Skill">




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/web">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Web"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="italic"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp">

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HTML"
                    android:textStyle="italic"/>
            </TableRow>

            <TableRow>
                <ProgressBar
                    android:id="@+id/simpleProgressBar"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:progress="70"
                    tools:ignore="DuplicateIds" /><!--// 50 default progress value-->

                <TextView
                    android:text="70%"
                    android:layout_marginLeft="10dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CSS"
                    android:textStyle="italic"/>
            </TableRow>

            <TableRow>
                <ProgressBar
                    android:id="@+id/simpleProgressBar"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:progress="77"
                    tools:ignore="DuplicateIds" /><!--// 50 default progress value-->

                <TextView
                    android:text="77%"
                    android:layout_marginLeft="10dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Javascript"
                    android:textStyle="italic"/>
            </TableRow>

            <TableRow>
                <ProgressBar
                    android:id="@+id/simpleProgressBar"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:progress="64"
                    tools:ignore="DuplicateIds" /><!--// 50 default progress value-->

                <TextView
                    android:text="64%"
                    android:layout_marginLeft="10dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PHP"
                    android:textStyle="italic"/>
            </TableRow>

            <TableRow
                android:layout_marginBottom="10dp">
                <ProgressBar
                    android:id="@+id/simpleProgressBar"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:progress="47"
                    tools:ignore="DuplicateIds" /><!--// 50 default progress value-->

                <TextView
                    android:text="47%"
                    android:layout_marginLeft="10dp"/>
            </TableRow>



        </TableLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/android"
        android:layout_below="@+id/web"
        android:layout_marginTop="40dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="italic"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp">

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Java"
                    android:textStyle="italic"/>
            </TableRow>

            <TableRow>
                <ProgressBar
                    android:id="@+id/simpleProgressBar"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:progress="32"
                    tools:ignore="DuplicateIds" /><!--// 50 default progress value-->

                <TextView
                    android:text="32%"
                    android:layout_marginLeft="10dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kotlin"
                    android:textStyle="italic"/>
            </TableRow>

            <TableRow
                android:layout_marginBottom="10dp">
                <ProgressBar
                    android:id="@+id/simpleProgressBar"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:progress="7"
                    tools:ignore="DuplicateIds" /><!--// 50 default progress value-->

                <TextView
                    android:text="7%"
                    android:layout_marginLeft="10dp"/>
            </TableRow>



        </TableLayout>


    </android.support.v7.widget.CardView>

